<!DOCTYPE html>
<html>
<head>
  <title>RHECLa</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
</head>
<body>

  <nav class="navbar navbar-default" id="top-navbar">
  <div class="container-fluid">
    <div class="navbar-header">
    </div>
      <ul class="nav navbar-nav navbar-left">
        <li><img src="l_logo.png"></img></li>
        <li><img src="rainbowlogo.png" style="height: 50px; width: 50px auto;"></li>
      </ul>

    <!-- Collect the nav links, forms, and other content for toggling -->

      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to 'Courses', courses_path %></li>
        <li><a href="#">Campus</a></li>
        <li><a href="#">About Rainbow House</a></li>
        <% if current_user %>
        <li><%= link_to 'Logout', logout_path, method: :delete %></li>
        <% else %>
        <li><%= link_to 'Login', login_path %></li>
        <li><%= link_to 'Sign Up', new_user_path %></li>
        <% end %>
        <li><img class="header-img" src="weibo.png"></li>
        <li><img class="header-img" src="weichat.png"></li>
      </ul>
    </div><!-- /.navbar-collapse -->
<!-- /.container-fluid -->
</nav>





<%= yield %>

</body>
</html>
